{
  "compilerOptions": {
    "rootDir": "./",
    "target": "es2021",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["es2020"],
    "paths": {
      "#pipeline-utils": ["./pipeline-utils/index.ts"],
      "#pipeline-utils/*": ["./pipeline-utils/*"]
    },
    "useUnknownInCatchVariables": false
  },
  "exclude": ["**/*.test.ts", "**/vm-filesystem/**", "**/dist"]
}
