{
  "extends": "../tsconfig.bazel.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./target/types",
    "types": ["node"],
    "paths": {
      "#pipeline-utils": [".buildkite/pipeline-utils/index.ts"],
      "#pipeline-utils/*": [".buildkite/pipeline-utils/*"],
    },
  },
  "include": [
    "pipeline-utils/**/*",
    "pipelines/**/*",
    "scripts/**/*",
    "pipelines/flaky_tests/groups.json",
    "pull_requests.json",
  ],
  "exclude": [
    "**/*.test.ts",
    "**/vm-filesystem/**",
    "**/dist",
  ],
}
